<h1>Pastum</h1>

<table class='table'>
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Active</th>
    
    <th colspan=3>Actions</th>
  </thead>
  <tbody>
    <% @pasta.each do |pastum| %>
      <tr>
        <td><%= pastum.name %></td>
        <td><%= pastum.description %></td>
        <td><%= pastum.active %></td>
      
        <td><%= link_to "Show", pastum_path(pastum) %></td>
        <td><%= link_to "Edit", edit_pastum_path(pastum) %></td>
        <td>
          <%= link_to "Delete", pastum_path(pastum),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New pastum", new_pastum_path %>